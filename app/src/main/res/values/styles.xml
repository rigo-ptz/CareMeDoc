<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AppTheme.Login">
        <item name="colorControlNormal">@color/login_til</item>
        <item name="colorControlActivated">@color/login_til</item>
        <item name="colorControlHighlight">@color/login_til</item>
        <item name="android:textColorHint">@color/login_til_hint</item>
    </style>

    <style name="TextInputLayoutFix">
        <item name="android:layout_marginLeft">-4dp</item>
    </style>

    <style name="LoginTILHint">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/login_til_hint</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

</resources>